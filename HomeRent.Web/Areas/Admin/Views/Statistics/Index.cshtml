@model HomeRent.Models.Administration.AdminStatisticsViewModel
@{
    ViewData["Title"] = "Статистики на приложението";
}

<div class="container py-4">
    <div class="dashboard-header">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h2 class="mb-2">Статистика на HomeRent</h2>
                <p class="mb-0 opacity-75">Административен панел за преглед и анализ на основните метрики</p>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="stats-card">
                <div class="card-body">
                    <div class="stats-icon icon-users">
                        <i class="fas fa-users"></i>
                    </div>
                    <h5 class="card-title">Регистрирани Потребители</h5>
                    <h3 class="stats-value">@Model.TotalUsers</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stats-card">
                <div class="card-body">
                    <div class="stats-icon icon-properties">
                        <i class="fas fa-home"></i>
                    </div>
                    <h5 class="card-title">Активни Обяви</h5>
                    <h3 class="stats-value">@Model.TotalActiveProperties</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stats-card">
                <div class="card-body">
                    <div class="stats-icon icon-bookings">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                    <h5 class="card-title">Общ Брой Резервации</h5>
                    <h3 class="stats-value">@Model.TotalBookings</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stats-card">
                <div class="card-body">
                    <div class="stats-icon icon-reviews">
                        <i class="fas fa-star"></i>
                    </div>
                    <h5 class="card-title">Общ Брой Ревюта</h5>
                    <h3 class="stats-value">@Model.TotalReviews</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stats-card">
                <div class="card-body">
                    <div class="stats-icon icon-revenue">
                        <i class="fas fa-coins"></i>
                    </div>
                    <h5 class="card-title">Оборот</h5>
                    <h3 class="stats-value">@Model.TotalRevenue.ToString("C")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stats-card">
                <div class="card-body">
                    <div class="stats-icon icon-average">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <h5 class="card-title">Средна цена на резервация</h5>
                    <h3 class="stats-value">@Model.AverageReservationPrice.ToString("C")</h3>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        :root {
            --primary: #4e54c8;
            --primary-light: #8f94fb;
            --secondary: #ff6b6b;
            --dark: #2d3748;
            --light: #f8f9fa;
            --success: #0acf97;
            --info: #39afd1;
            --warning: #ffbc00;
        }

        body {
            font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
            background-color: #f5f7fa;
            color: var(--dark);
        }

        .dashboard-header {
            background: linear-gradient(135deg, var(--primary), var(--primary-light));
            color: white;
            border-radius: 16px;
            padding: 1.5rem;
            margin-bottom: 2rem;
            box-shadow: 0 10px 15px -3px rgba(0,0,0,0.1);
            position: relative;
            overflow: hidden;
        }

            .dashboard-header::after {
                content: '';
                position: absolute;
                top: -50%;
                right: -50%;
                width: 100%;
                height: 200%;
                background: radial-gradient(rgba(255,255,255,0.2), transparent);
                transform: rotate(30deg);
            }

        .stats-card {
            background: white;
            border-radius: 16px;
            overflow: hidden;
            transition: all 0.3s ease;
            height: 100%;
            box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1);
        }

            .stats-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 15px -3px rgba(0,0,0,0.1);
            }

        .card-body {
            padding: 1.25rem;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .card-title {
            font-size: 0.875rem;
            font-weight: 600;
            letter-spacing: 0.5px;
            text-transform: uppercase;
            color: #6c757d;
            margin: 0;
        }

        .stats-icon {
            font-size: 2rem;
            width: 60px;
            height: 60px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            margin-bottom: 1rem;
        }

        .stats-value {
            font-size: 2rem;
            font-weight: 700;
            margin: 0.5rem 0;
            color: var(--dark);
        }

        .icon-users {
            background: rgba(78, 84, 200, 0.1);
            color: var(--primary);
        }

        .icon-properties {
            background: rgba(10, 207, 151, 0.1);
            color: var(--success);
        }

        .icon-bookings {
            background: rgba(57, 175, 209, 0.1);
            color: var(--info);
        }

        .icon-reviews {
            background: rgba(255, 188, 0, 0.1);
            color: var(--warning);
        }

        .icon-revenue {
            background: rgba(255, 107, 107, 0.1);
            color: var(--secondary);
        }

        .icon-average {
            background: rgba(78, 84, 200, 0.1);
            color: var(--primary);
        }
    </style>
}