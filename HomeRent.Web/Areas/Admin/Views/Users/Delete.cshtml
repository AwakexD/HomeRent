@model HomeRent.Models.Administration.UserDeleteViewModel
@{
    ViewData["Title"] = "Потвърди изтриване";
}

<!-- Header Section -->
<section class="py-4" style="background-color: #fff;">
    <div class="container text-center">
        <nav aria-label="breadcrumb" class="d-flex justify-content-center">
            <ol class="breadcrumb bg-white">
                <li class="breadcrumb-item">
                    <a asp-area="Admin" asp-controller="AdminDashboard" asp-action="Index" style="color: #1563DF;">
                        Администраторски панел
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-area="Admin" asp-controller="Users" asp-action="Index" style="color: #1563DF;">
                        Потребители
                    </a>
                </li>
                <li class="breadcrumb-item active" aria-current="page" style="color: #1563DF;">
                    Потвърди изтриване
                </li>
            </ol>
        </nav>

        <h2 style="color: #1563DF;">@ViewData["Title"]</h2>
    </div>
</section>

<!-- Delete Confirmation Card -->
<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg" style="max-width: 700px; width: 100%; border-radius: 1rem;">
        <div class="card-body p-4">
            <h4 class="mb-4 text-danger text-center">
                Сигурни ли сте, че искате да изтриете този потребител?
            </h4>

            <ul class="list-group list-group-flush mb-4">
                <li class="list-group-item"><strong>Име:</strong> @Model.FirstName @Model.LastName</li>
                <li class="list-group-item"><strong>Email:</strong> @Model.Email</li>
                <li class="list-group-item"><strong>Телефон:</strong> @Model.PhoneNumber</li>
                <li class="list-group-item"><strong>Роля:</strong> @Model.Role</li>
            </ul>

            <form asp-action="ConfirmDelete" method="post" class="d-flex justify-content-between">
                <input type="hidden" name="userId" value="@Model.Id" />

                <a asp-action="Index" class="btn btn-secondary px-4">Отказ</a>

                <button type="submit" class="btn btn-danger px-4">
                    <i class="bi bi-trash me-1"></i> Изтрий
                </button>
            </form>
        </div>
    </div>
</div>