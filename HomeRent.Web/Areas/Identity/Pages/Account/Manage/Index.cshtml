@page
@model IndexModel
@{
    ViewData["Title"] = "Профил";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<partial name="_StatusMessage" for="StatusMessage" />

<div class="main-content-inner">
    <h3 class="text-center pb-5">@this.ViewData["Title"]</h3>
    <div class="button-show-hide show-mb">
        <span class="body-1">Покажи страничното меню</span>
    </div>
    <div class="">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating pb-4">
                <input asp-for="Username" class="form-control" disabled/>
                <label asp-for="Username" class="form-label">Имейл/потребителско име</label>
            </div>
            <div class="form-floating pb-4">
                <input asp-for="Input.PhoneNumber" class="form-control"/>
                <label asp-for="Input.PhoneNumber" class="form-label">Телефонен номер</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 tf-btn primary">Запазване</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
